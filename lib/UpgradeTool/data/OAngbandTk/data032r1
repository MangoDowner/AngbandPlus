proc ParseSetting {string} {
	if {[regexp "setg::one (.*) \"(.*)\"" $string ignore name value]} {
		return [list name $name value $value]
	}
	return ""
}

proc ModifySetting {info} {
	return $info
}

proc StringifySetting {info} {
	array set data $info
	return "setg::one $data(name) \"$data(value)\""
}

