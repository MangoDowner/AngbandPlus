      lib/info/delete.me lib/save/delete.me lib/user/delete.me \
      lib/data/delete.me lib/save/delete.me lib/bone/delete.me

cp ../*.exe .
cp ../changes.txt .

cp ../lib/edit/*.txt lib/edit
