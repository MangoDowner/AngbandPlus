cp ../lib/help/*.txt lib/help

cp ../lib/pref/*.prf lib/pref

#cp ../lib/xtra/font/*.fon lib/xtra/font

# no graphics
#cp ../lib/xtra/graf/8x8.bmp lib/xtra/graf
